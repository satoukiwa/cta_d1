<div class="page-header">
  <h1>
    Train logs
    <a href="/train_logs/new" class="btn btn-lg btn-success">New Train log</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "train_logs_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :train_number_cont, "Train number contains" %>
    <%= f.text_field :train_number_cont, :class => "form-control", :placeholder => "Train number contains" %>
  </div>

<div class="form-group">
    <%= f.label :train_locationmileage_cont, "Train locationmileage contains" %>
    <%= f.text_field :train_locationmileage_cont, :class => "form-control", :placeholder => "Train locationmileage contains" %>
  </div>

<div class="form-group">
          <%= f.label :record_time, "Record time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='record_timegteqPicker'>
                  <%= f.text_field :record_time_gteq, :class => "form-control", :placeholder => "Record time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='record_timelteqPicker'>
                  <%= f.text_field :record_time_lteq, :class => "form-control", :placeholder => "Record time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#record_timegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#record_timelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#record_timegteqPicker').on("dp.change", function (e) {
                  $('#record_timelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#record_timelteqPicker').on("dp.change", function (e) {
                  $('#record_timegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :train_locationbasestation_cont, "Train locationbasestation contains" %>
    <%= f.text_field :train_locationbasestation_cont, :class => "form-control", :placeholder => "Train locationbasestation contains" %>
  </div>

<div class="form-group">
    <%= f.label :stop_name_cont, "Stop name contains" %>
    <%= f.text_field :stop_name_cont, :class => "form-control", :placeholder => "Stop name contains" %>
  </div>

<div class="form-group">
    <%= f.label :station_name_cont, "Station name contains" %>
    <%= f.text_field :station_name_cont, :class => "form-control", :placeholder => "Station name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/train_logs" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#train_logs_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Train number</th>
        <th>Station name</th>
        <th>Stop name</th>
        <th>Train locationbasestation</th>
        <th>Record time</th>
        <th>Train locationmileage</th>
        <th>Actions</th>
      </tr>

      <% @train_logs.each do |train_log| %>
      <tr>
        <td><%= train_log.train_number %></td>
        <td><%= train_log.station_name %></td>
        <td><%= train_log.stop_name %></td>
        <td><%= train_log.train_locationbasestation %></td>
        <td><%= train_log.record_time %></td>
        <td><%= train_log.train_locationmileage %></td>
        <td>
          <a href="/train_logs/<%= train_log.id %>" class="btn btn-primary">Show</a>
          <a href="/train_logs/<%= train_log.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_train_log/<%= train_log.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @train_logs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
