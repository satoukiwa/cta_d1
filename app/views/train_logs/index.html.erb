<div class="page-header">
  <h1>
    Train logs
    <a href="/train_logs/new" class="btn btn-lg btn-success">New Train log</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Train number</th>
        <th>Station name</th>
        <th>Stop name</th>
        <th>Train locationbasestation</th>
        <th>Record time</th>
        <th>Train locationmileage</th>
        <th>Actions</th>
      </tr>

      <% @train_logs.each do |train_log| %>
      <tr>
        <td><%= train_log.train_number %></td>
        <td><%= train_log.station_name %></td>
        <td><%= train_log.stop_name %></td>
        <td><%= train_log.train_locationbasestation %></td>
        <td><%= train_log.record_time %></td>
        <td><%= train_log.train_locationmileage %></td>
        <td>
          <a href="/train_logs/<%= train_log.id %>" class="btn btn-primary">Show</a>
          <a href="/train_logs/<%= train_log.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_train_log/<%= train_log.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
